@page "/lista"
<h3>Lista</h3>
<label class="input-group-text">Agrega una Actividad <input type="text" @bind-value="actividad" /></label>

<button @onclick="AgregarActividad" class="btn btn-primary">Agregar</button>
<button @onclick="MostrarActividades" class="btn btn-primary">Mostrar</button>

@if (tabla)
{
    <table class="table">
        <thead>
            <tr>
                <th>Actividad</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in lista)
            {
                <tr>
                    <td>@item</td>
                    <td><button @onclick="() => EliminarActividad(item)" class="btn btn-danger">Eliminar</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    public List<string> lista = new List<string>();
    public string? actividad;
    public bool tabla = false;

    public void AgregarActividad()
    {
        if (!string.IsNullOrEmpty(actividad))
        {
            lista.Add(actividad);
            actividad = string.Empty;
        }
    }

    public void MostrarActividades()
    {
        tabla = true;
    }

    public void EliminarActividad(string item)
    {
        lista.Remove(item);
    }
}
