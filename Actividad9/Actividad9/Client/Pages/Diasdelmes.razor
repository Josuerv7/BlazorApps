@page "/diasdelmes"
<base href="/" />
<link href="css/bootstrap/bootstrap.min.css" rel="stylesheet" />
<link href="css/app.css" rel="stylesheet" />
<link href="Actividad9.Client.styles.css" rel="stylesheet" />

<PageTitle>Dias del mes</PageTitle>


<div class="container">
    <h2>Conocer los días del mes</h2>
</div>

<div><label>Mes <input type="number" class="form-control" @bind="mes" /></label></div>
<div><label>Año <input type="number" class="form-control" @bind="año" /></label></div>
<br>
<button type="button" class="btn btn-success" @onclick=calcular>Calcular</button>
<h2>El mes @mes del año @año tiene @result</h2>
@code {
    private int mes=0;
    private int año = 0;
    private int result=0;

    private void calcular()
    {
        switch(mes)
        {
            case 1: result = 31;
                break;
            case 2:
                if (año % 4 == 0 && (año % 100 != 0 || año % 400 == 0))
                {
                    result = 29;
                }
                else
                {
                    result = 28;
                }
                break;
            case 3: result = 31;
                break;
            case 4: result = 30;
                break;
            case 5:
                result = 31;
                break;
            case 6: result = 30;
                break;
            case 7: result = 31;
                break;
            case 8:
                result = 31;
                break;
            case 9:
                result = 30;
                break;
            case 10:
                result = 31;
                break;
            case 11:
                result = 30;
                break;
            case 12:
                result = 31;
                break;
        }

    }
}
